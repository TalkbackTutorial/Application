<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_fill"
        android:orientation="vertical"
        android:padding="@dimen/content_padding">

        <TextView
            android:id="@+id/go_back_tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/paragraph_spacing"
            android:text="@string/go_back_part1_intro" />

        <include
            android:id="@+id/continue_button"
            layout="@layout/pill_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/paragraph_spacing"
            app:text="@{`Continue`}" />

        <TextView
            android:id="@+id/go_back_tv_outro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/paragraph_spacing"
            android:text="@string/go_back_part1_conclusion"
            android:visibility="gone" />

        <include
            android:id="@+id/finish_lesson_button"
            layout="@layout/pill_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/paragraph_spacing"
            app:text="@{`Finish Lesson`}"
            tools:visibility="gone" />

    </LinearLayout>

</layout>
