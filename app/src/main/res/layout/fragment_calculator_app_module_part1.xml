<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/continue_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginVertical="@dimen/vertical_card_spacing"
        app:cardBackgroundColor="@color/foreground_fill"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/horizontal_card_spacing">

            <TextView
                android:id="@+id/install_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculator_not_installed_message"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/continue_calculator_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equation_calculator_app"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>