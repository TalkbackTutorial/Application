<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            tools:text="Prompt user to do something" />

        <TextView
            android:id="@+id/wrong_action_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/wrong_action_message"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/pushback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/pushback_text"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/target_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

        <Button
            android:id="@+id/target_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/target_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/wrong_action_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/wrong_action_message"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/pushback_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/pushback_text"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/target2_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

        <Button
            android:id="@+id/target2_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/target2_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Target"
            tools:visibility="visible" />

    </LinearLayout>
</layout>